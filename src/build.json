{
  "handler": "demo",
  "connection": "http",

  "settings" : {
    "frontend" : {
      "Core" : {
        "APIURI":           "/API",
        "FSURI":            "/FS",
        "MetadataURI":      "/packages.json",
        "ThemeMetadataURI": "/themes.json",
        "ThemeURI":         "/themes",
        "PackageURI":       "/packages",
        "Home":             "home:///",
        "Handler":          "%HANDLER%",
        "Connection":       "%CONNECTION%",
        "MaxUploadSize":    2097152,
        "BugReporting":     true,
        "Preloads":         [],
        "Sounds":           true,
        "Locale":           "en_EN",
        "VersionAppend":    "",
        "VFS": {
          "GoogleDrive": {
            "Enabled": false
          }
        },
        "Languages":        {
          "en_EN": "English",
          "no_NO": "Norsk (Norwegian)",
          "de_DE": "Deutsch (German)"
        }
      },

      "GoogleAPI": {
        "ClientId": ""
      },

      "Fonts" : {
        "default" : "OSjsFont",
        "list"    : [
          "OSjsFont",
          "Arial",
          "Arial Black",
          "Sans-serif",
          "Serif",
          "Trebuchet MS",
          "Impact",
          "Georgia",
          "Courier New",
          "Comic Sans MS",
          "Monospace",
          "Symbol",
          "Webdings"
        ]
      },

      "MIME" : {

      },

      "WM" : {
        "exec": "CoreWM",
        "args": {
          "defaults": {
            "theme": "uncomplicated"
          }
        }
      }
    },

    "backend" : {
      "vfsdir" : "%ROOT%/vfs/home",
      "tmpdir" : "%ROOT%/vfs/tmp",
      "publicdir" : "%ROOT%/vfs/public",
      "handler" : "%HANDLER%",
      "port" : 8000
    }
  },


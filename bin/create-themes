#!/bin/bash

for i in `find src/themes/*.less`; do
  if [[ ! "$i" == src/themes/_* ]]; then
    name=$(basename ${i%.*})
    echo "--- Generating CSS for '${name}'"
    lessc $i dist/themes/${name}.css
    echo "--- Copying resources in '${name}'..."
    cp -Rf src/themes/$name dist/themes/$name
  fi
done

